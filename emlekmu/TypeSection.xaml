<UserControl x:Class="emlekmu.TypeSection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:emlekmu"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Viewbox Stretch="Uniform">
            <StackPanel>
                <Label HorizontalAlignment="Center" Margin="10" Height="50" FontSize="30">Types</Label>
                <ListBox Width="800" Height="300" Margin="10"
                    ItemsSource="{Binding Source=Types}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <local:TypeRow Width="790" Id="{Binding Path=Id}"
                                           TypeName="{Binding Path=Name}"
                                           Descripton="{Binding Path=Description}"
                                           Icon="{Binding Path=Icon}"></local:TypeRow>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <StackPanel HorizontalAlignment="Right" Margin="10" Height="50" Orientation="Horizontal">
                    <Button Width="100" Margin="20 0 5 0">Add Type</Button>
                    <Button Width="100" Margin="5 0 5 0">Edit Type</Button>
                    <Button Width="100" Margin="5 0 20 0">Delete</Button>
                </StackPanel>
            </StackPanel>
        </Viewbox>
    </Grid>
</UserControl>
