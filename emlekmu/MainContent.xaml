<UserControl x:Class="emlekmu.MainContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:emlekmu"
             mc:Ignorable="d" 
             d:DesignHeight="1000" d:DesignWidth="1600">
    <Grid x:Name="Root" Background="#cceeff">
        <DockPanel>
            <Menu DockPanel.Dock="Top" Height="40">
                <MenuItem Header="_File">
                    <MenuItem Header="_Types" Click="types_Click"/>
                    <MenuItem Header="T_ags" Click="tags_Click"/>
                    <MenuItem Header="_Open" />
                    <MenuItem Header="_Save" />
                    <Separator />
                    <MenuItem Header="_Exit" />
                </MenuItem>
                <MenuItem Header="_Add">
                    <MenuItem Header="_Monument" Click="monumentAdd_Click"/>
                    <MenuItem Header="_Tag" Click="tagAdd_Click"/>
                    <MenuItem Header="_Type" Click="typeAdd_Click"/>
                </MenuItem>
            </Menu>
            <StackPanel Orientation="Horizontal">
                <local:MonumentsTable x:Name="MonumentTable" Grid.Column="1" Grid.Row="1" Monuments="{Binding SearchedNFMonuments}" FilteredMonuments="{Binding FilteredMonuments}" RemoveMonumentCallback="{Binding removeMonumentCallback}" EditMonumentCallback="{Binding editMonumentCallback}"/>
                <local:SearchFilterControl Types="{Binding Types}" Tags="{Binding Tags}" DialogType="Search" SearchCallback="{Binding findMonumentsCallback}" FilterCallback="{Binding filterMonumentsCallback}"></local:SearchFilterControl>
                <local:SearchFilterControl Types="{Binding Types}" Tags="{Binding Tags}" DialogType="Filter" SearchCallback="{Binding findMonumentsCallback}" FilterCallback="{Binding filterMonumentsCallback}"></local:SearchFilterControl>

            </StackPanel>
            </DockPanel>
    </Grid>
</UserControl>
