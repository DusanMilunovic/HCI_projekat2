<UserControl x:Class="emlekmu.TypeRow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:emlekmu"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="1200">
    <Grid x:Name="Root">
        <Viewbox Stretch="Uniform">
            <StackPanel Orientation="Horizontal">
                <Label Width="150" Height="50" FontSize="28" Content="{Binding Id}"></Label>
                <Label Width="450" Height="50" FontSize="28" Content="{Binding TypeName}"></Label>
                <Label Width="550" Height="50" FontSize="28" Content="{Binding Description}"></Label>
                <Image Width="40" Height="40" Margin="5" Source="{Binding Icon}"></Image>
            </StackPanel>
        </Viewbox>
    </Grid>
</UserControl>
