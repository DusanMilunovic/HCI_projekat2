<UserControl x:Class="emlekmu.TagRowDetail"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:emlekmu"
             mc:Ignorable="d" 
             d:DesignHeight="
             300" d:DesignWidth="800">
    <Grid>
        <Viewbox Stretch="Uniform" Margin="5">
            <Border CornerRadius="2" BorderBrush="Gray" BorderThickness="2">
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal">
                        <Label Width="700" Height="50" FontSize="20" VerticalContentAlignment="Center">Id</Label>
                        <Ellipse Width="80" Height="80" Margin="10" Fill="#006699" HorizontalAlignment="Right"></Ellipse>
                    </StackPanel>
                    <Border BorderThickness="0 1 0 0" BorderBrush="LightGray">
                        <Label Width="800" Height="200" FontSize="20" VerticalContentAlignment="Top">Description</Label>
                    </Border>
                </StackPanel>
            </Border>
        </Viewbox>
    </Grid>
</UserControl>
