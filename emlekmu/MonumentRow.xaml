<UserControl x:Class="emlekmu.MonumentRow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:emlekmu"
             mc:Ignorable="d" 
             d:DesignHeight="94" d:DesignWidth="894">
    <Grid x:Name="Root" Margin="5">
        <Viewbox Stretch="Uniform">
            <Border BorderBrush="Gray" BorderThickness="2">
                <StackPanel Orientation="Horizontal" Cursor="Hand" Background="#FFFFFF">
                    <StackPanel Orientation="Vertical">
                        <Label Width="100" Height="25" FontSize="12">ID:</Label>
                        <Label Width="100" Height="35" FontSize="16" HorizontalAlignment="Left" Content="{Binding MonumentId}"></Label>

                    </StackPanel>
                    <StackPanel Orientation="Vertical">
                        <Label Width="250" Height="25" FontSize="12">Name</Label>
                        <Label Width="250" Height="35" FontSize="16" HorizontalAlignment="Left" Content="{Binding MonumentName}"></Label>

                    </StackPanel>
                    <StackPanel Orientation="Vertical">
                        <Label Width="195" Height="25" FontSize="12">Type</Label>
                        <Label Width="195" Height="35" FontSize="16" HorizontalAlignment="Left" Content="{Binding MonumentType.Name}"></Label>
                    </StackPanel>

                    <StackPanel Orientation="Vertical">
                        <Label Width="245" Height="25" FontSize="12">Tags</Label>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <ItemsControl ItemsSource="{Binding MonumentTags}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Ellipse Width="15" Height="15" Margin="3" Fill="{Binding Color.Hex}" HorizontalAlignment="Right"></Ellipse>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid Rows="1" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                            </ItemsControl>
                        </StackPanel>
                    </StackPanel>

                    <Image Width="70" Height="70" Margin="10" Source="{Binding MonumentImage}"></Image>
                </StackPanel>
            </Border>
        </Viewbox>
    </Grid>
</UserControl>
