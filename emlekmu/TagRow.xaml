<UserControl x:Class="emlekmu.TagRow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:emlekmu"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="800">
    <Grid x:Name="Root">
         
        <Viewbox Stretch="Uniform" Margin="5">
            <Border CornerRadius="2" BorderBrush="Gray" BorderThickness="2">

                <StackPanel Orientation="Horizontal">
                    <Label Width="250" Height="50" FontSize="20" VerticalContentAlignment="Center" Content="{Binding Id}"></Label>
                    <Label Width="500" Height="50" FontSize="20" VerticalContentAlignment="Center" Content="{Binding Description}"></Label>
                    <Ellipse Width="40" Height="40" Margin="5" Fill="{Binding Color.Hex}"></Ellipse>
                </StackPanel>
            </Border>
        </Viewbox>
    </Grid>
</UserControl>
