<Window x:Class="emlekmu.AreYouSure"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:emlekmu"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="300">
    <DockPanel x:Name="Root">
        <Label DockPanel.Dock="Top" Margin="20" HorizontalAlignment="Center" FontSize="16">Are you sure you want to delete?</Label>

        <StackPanel DockPanel.Dock="Bottom">
            <Button IsDefault="True" Width="180" Margin="5">Delete</Button>
            <Button IsCancel="True" Width="180" Margin="5">Cancel</Button>
        </StackPanel>
        <Rectangle></Rectangle>
    </DockPanel>
</Window>
